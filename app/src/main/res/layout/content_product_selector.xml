<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.ProductSelector"
    tools:showIn="@layout/app_bar_product_selector">

<FrameLayout
    android:id="@+id/fl_product_selector_categories"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constrainedHeight="true"
    app:layout_constraintHeight_percent="0.15"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:background="@android:color/holo_blue_dark"
    >
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_categories_prod_selector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>

    <FrameLayout
        android:id="@+id/fl_product_prices_product_selector"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintHeight_percent="0.84"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@android:color/holo_orange_dark">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_products_prod_selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>